<% layout("/layout/boilerplate") %>
<body>
    <h3>all listings</h3>
    <div class="row row-cols-lg-3 row row-cols-md-2 row row-col-sm-1">
        <% for(listing of allListings){ %>
          <a href="/listings/<%= listing._id %>" class="listing-line">
<div class="card cols" >
 
   <img src="<%= listing.image %>" class="card-img-top" alt="listing-image" style="height: 20rem">


   
   
  <div class="card-body">
    <h5 class="card-title"><%= listing.title %></h5>
    <p class="card-text">
       <b> <%= listing.title %></b>
        <br>&#8377;
        <%= listing.price.toLocaleString("en-in") %>/night
    </p>
   
  </div>
</div>
</a>
 <%   } %>
    </div>

 

</body>
