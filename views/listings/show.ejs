<% layout("/layout/boilerplate") %>

<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
        
    <h3><%= listing.title %></h3>
    </div>
    <div class="card col-6 offset-2">
         <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing-image">
  <div class="card-body">
   <p class="card-text">
   
    <br>
    <%= listing.description %>
    <br>
     &#8377; <%= listing.price.toLocaleString("en-in") %>
     <br>
     <%= listing.location %>
     <br>
     <%= listing.country %>
</p>
  </div>
</div>
    </div>
    <div class="btns">
 
    <a href="/listings/<%= listing._id%>/edit" class="btn btn-dark col-1 offset-2">  edit listing</a>
    
    

     <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-dark offset-2">delete</button>
        </form>
    </div>
    <br><br>

    <div  class="col-8 offset-2 mb-5">
        <hr>

        <h4>Leave a Review</h4>
<form action="/listings/<%= listing._id%>/review" method="post" novalidate class="needs-validation">
    <div class="mb-3 mt-3">
        <label for="Rating"  class="form-lable">Rating</label>
        <input type="range" name="review[rating]" min="1" max="5" id="rating" class="form-range">
    </div>

    <div>
        <label for="Comment">Comment</label>
        <textarea name="review[Comment]" id="comment"  rows="5" class="form-control" required></textarea>
        <div class="valid-feedback">looks good</div>
        <div class="invalid-feedback">please add some comment for review</div>
    </div>
    <br>
    <button class="btn btn-outline-dark">submit</button>
</form>
<hr>

<p><b>All Reviews</b></p>

<div class="row">
<% for(review of listing.reviews){ %>
    

    
 <div class="card ravi col-5 ms-3 mb-3">
<div class="card-body">
    <h5 class="card-title">Ravi Ranjan </h5>
    <p class="card-text"><%= review.Comment %></p>
     <p class="card-text"><%= review.rating %>stars </p>
</div>
<form class="mb-3" method="post" action="/listings/<%= listing._id%>/review/<%= review._id %>?_method=DELETE">
    <button class="btn btn-dark btn-sm">delete</button>
</form>
 </div> 

    <% } %> 
    </div>
    </div>
    
    
</body>
    
       

