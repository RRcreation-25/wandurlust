<% layout("/layout/boilerplate.ejs") %>
<body> 
    <br><br>
     <div class="row mt-3">
<div class="col-8 offset-2">
    <h3> create a new listing</h3>
    
  
  
    <form action="/listings" method="post" novalidate class="needs-validation">
       
        <div class="mb-3" >
             <label for="title" class="form-lable">Title</label>
             <input type="text" name="listing[title]" placeholder="Add a catchy title" class="form-control" required>
             <div class="valid-feedback"> Title looks good!</div>
               <div class="invalid-feedback"> Title is required!</div>
        </div>
      
        
        <div class="mb-3">
             <label for="description" class="form-lable">description</label>
             <textarea name="listing[description]" id="" class="form-control"required ></textarea >
          <div class="valid-feedback"> description looks good!</div>
           <div class="invalid-feedback"> please enter a short description!</div>

        </div>


       <div class="mb-3">
        <label for="image" class="form-lable">image link</label>
        <input type="text" name="listing[image]" placeholder="enter image url/link" class="form-control">
       </div>

       <div class="row">
        
       <div class="mb-3 col-md-4">

         <label for="price" class="form-lable">price</label>
        <input type="text" name="listing[price]" placeholder="1200" class="form-control" required >
 <div class="valid-feedback"> price looks good!</div>
<div class="invalid-feedback">  price should be valid!</div>
       </div>
         
        <div class="mb-3 col-md-8">
             <label for="location" class="form-lable">location</label>
            <input type="text" name="listing[location]" placeholder="jaipur,rajasthan" class="form-control" required>
 <div class="valid-feedback"> location looks good!</div>
<div class="invalid-feedback">  location should be valid!</div>
        </div>
       </div>

        
        <div class="mb-3">
             <label for="country" class="form-lable">country</label>
            <input type="text" name="listing[country]" placeholder="india" class="form-control" required>
 <div class="valid-feedback"> country looks good!</div>
<div class="invalid-feedback">  country should be valid!</div>
        </div>
        
         
        <button class="btn btn-dark mt-3">create listing</button>
        <br><br><br>
     </form>
    </div>
    </div>
</body>
